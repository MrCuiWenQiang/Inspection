<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WorkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/dd_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上班打卡" />

        <TextView
            android:id="@+id/tv_up_hint"
            style="@style/dd_hint"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx时间打卡成功" />
        <TextView
            android:id="@+id/tv_up_date"
            style="@style/dd_hint"
            android:textColor="@color/viewfinder_mask"
            android:textSize="16sp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx时间打卡成功"
            />
        <RelativeLayout
            android:id="@+id/ll_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/back_round_dd"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="上班打卡"
                android:textColor="@color/white" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_show_up"
            android:text="查看打卡范围"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"
            android:textColor="@color/bg_socket_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/dd_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下班打卡" />

        <TextView
            android:id="@+id/tv_down_hint"
            style="@style/dd_hint"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx时间打卡成功" />
        <TextView
            android:id="@+id/tv_down_date"
            style="@style/dd_hint"
            android:textColor="@color/viewfinder_mask"
            android:textSize="16sp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx时间打卡成功"
            />
        <RelativeLayout
            android:id="@+id/ll_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/back_round_dd"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="下班打卡"
                android:textColor="@color/white" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_show_down"
            android:text="查看打卡范围"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"
            android:textColor="@color/bg_socket_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>