<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            style="@style/imtop"
            android:src="@mipmap/routrww" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            >

            <View style="@style/tab_s_view" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="案件上报"
                android:textColor="@color/sds"
                android:textSize="18sp" />
        </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="20dp"
               android:paddingRight="20dp"
               android:orientation="vertical">
               <LinearLayout
                   style="@style/ll_base"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@color/white"
                   android:gravity="center_horizontal"
                   android:orientation="vertical">

                   <LinearLayout style="@style/edit_ll">

                       <TextView
                           android:drawableLeft="@mipmap/la"
                           style="@style/edit_title"
                           android:text="事件类型:" />

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="35dp"
                           android:layout_weight="0.6"
                           android:gravity="center_vertical">

                           <TextView
                               android:id="@+id/tv_ctype"
                               style="@style/et_back"
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:drawableRight="@mipmap/eddown"
                               android:gravity="center_vertical"
                               android:hint="点击选择事件类型"
                               android:textSize="14sp" />
                       </LinearLayout>
                   </LinearLayout>

                   <LinearLayout
                       style="@style/edit_ll"
                       android:visibility="gone">

                       <TextView
                           style="@style/edit_title"
                           android:text="事件标题:" />

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.6"
                           android:gravity="center_vertical">

                           <EditText
                               android:id="@+id/et_title"
                               style="@style/et_back"
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:drawableRight="@mipmap/upload_date"
                               android:gravity="center_vertical"
                               android:hint="请填写事件标题"
                               android:textSize="18sp" />
                       </LinearLayout>
                   </LinearLayout>

                   <LinearLayout style="@style/edit_ll">

                       <TextView
                           android:drawableLeft="@mipmap/lb"
                           style="@style/edit_title"
                           android:text="事件等级:" />

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="35dp"
                           android:layout_weight="0.6"
                           android:gravity="center_vertical">

                           <TextView
                               android:id="@+id/tv_worklevel"
                               style="@style/et_back"
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:drawableRight="@mipmap/eddown"
                               android:hint="点击选择事件等级"
                               android:textSize="14sp" />

                       </LinearLayout>
                   </LinearLayout>

                   <LinearLayout style="@style/edit_ll"

                       >

                       <TextView
                           android:drawableLeft="@mipmap/lc"
                           style="@style/edit_title"
                           android:text="地图位置:" />

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.6"
                           android:gravity="center_vertical">

                           <EditText
                               android:id="@+id/et_caddress"
                               style="@style/et_back"
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="1"
                               android:drawableRight="@mipmap/statu_e"
                               android:textSize="14sp" />

                           <ImageView
                               android:id="@+id/im_caddress"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="5dp"
                               android:src="@mipmap/upload_local"
                               android:visibility="gone" />
                       </LinearLayout>
                   </LinearLayout>



               </LinearLayout>

               <LinearLayout
                   style="@style/ll_file_base"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
           >

                       <TextView
                           android:drawableLeft="@mipmap/ld"
                           android:id="@+id/tv_p"
                           style="@style/edit_title"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:text="上传图片" />


                   </RelativeLayout>

                   <View style="@style/tab_w_view" />

                   <android.support.v7.widget.RecyclerView
                       android:id="@+id/rv_photo"
                       android:layout_width="match_parent"
                       android:layout_height="100dp"
                       android:layout_gravity="center"
                       android:layout_marginTop="8dp" />
               </LinearLayout>

               <LinearLayout
                   style="@style/ll_file_base"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                     >

                       <TextView
                           android:id="@+id/tv_v"
                           android:drawableLeft="@mipmap/le"
                           style="@style/edit_title"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:text="短视频" />


                   </RelativeLayout>

                   <View style="@style/tab_w_view" />

                   <android.support.v7.widget.RecyclerView
                       android:id="@+id/rv_video"
                       android:layout_width="match_parent"
                       android:layout_height="100dp"
                       android:layout_gravity="center"
                       android:layout_marginTop="8dp" />
                   <LinearLayout style="@style/edit_ll">

                       <TextView
                           android:drawableLeft="@mipmap/lf"
                           style="@style/edit_title"
                           android:layout_height="wrap_content"
                           android:text="事件描述:" />

                       <LinearLayout
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="0.6"
                           android:gravity="center_vertical">

                           <EditText
                               android:id="@+id/tv_feedbackcontent"
                               style="@style/et_back"
                               android:layout_width="match_parent"
                               android:layout_height="125dp"
                               android:gravity="top"
                               android:minLines="5"
                               android:textSize="14sp"
                               android:singleLine="false" />
                       </LinearLayout>
                   </LinearLayout>

               </LinearLayout>
           </LinearLayout>

        <Button
            android:id="@+id/bt_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/bt_login_backage"
            android:text="上报"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>