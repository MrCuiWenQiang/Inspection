<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/listbb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/upload_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                style="@style/ll_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout style="@style/edit_ll">

                    <TextView
                        style="@style/edit_title"
                        android:text="事件类型:" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_ctype"
                            style="@style/et_back"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableRight="@mipmap/eddown"
                            android:gravity="center_vertical"
                            android:hint="点击选择事件类型"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/edit_ll"
                    android:visibility="gone">

                    <TextView
                        style="@style/edit_title"
                        android:text="事件标题:" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/et_title"
                            style="@style/et_back"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableRight="@mipmap/upload_date"
                            android:gravity="center_vertical"
                            android:hint="请填写事件标题"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout style="@style/edit_ll">

                    <TextView
                        style="@style/edit_title"
                        android:text="事件等级:" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_worklevel"
                            style="@style/et_back"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableRight="@mipmap/eddown"
                            android:hint="点击选择事件等级"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout style="@style/edit_ll"

                    >

                    <TextView
                        style="@style/edit_title"
                        android:text="地图位置:" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/et_caddress"
                            style="@style/et_back"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableRight="@mipmap/statu_e"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/im_caddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/upload_local"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout style="@style/edit_ll">

                    <TextView
                        style="@style/edit_title"
                        android:layout_height="wrap_content"
                        android:text="事件描述:" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/tv_feedbackcontent"
                            style="@style/et_back"
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            android:gravity="top"
                            android:minLines="5"
                            android:singleLine="false" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/upload_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                style="@style/ll_file_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">

                    <TextView
                        android:id="@+id/tv_p"
                        style="@style/edit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="上传图片" />

                    <ImageView
                        android:layout_toRightOf="@id/tv_p"
                        android:layout_width="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/camera" />
                </RelativeLayout>

                <View style="@style/tab_w_view" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_photo"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/upload_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                style="@style/ll_file_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp">

                    <TextView
                        android:id="@+id/tv_v"
                        style="@style/edit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="短视频" />

                    <ImageView
                        android:layout_toRightOf="@id/tv_v"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/up_video" />
                </RelativeLayout>

                <View style="@style/tab_w_view" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_video"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/bt_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/bt_login_backage"
            android:text="上报"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>