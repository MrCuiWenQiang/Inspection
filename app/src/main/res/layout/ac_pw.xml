<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        style="@style/ll_base"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout style="@style/edit_ll">

            <TextView
                style="@style/edit_title"
                android:text="原密码:" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.6"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_password_old"
                    style="@style/login_password_edit"
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/edit_style"
                    android:hint="请输入您的原密码"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout style="@style/edit_ll">

            <TextView
                style="@style/edit_title"
                android:text="新密码:" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.6"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_password_now"
                    style="@style/login_password_edit"
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/edit_style"
                    android:hint="请输入您的新密码"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout style="@style/edit_ll">

            <TextView
                style="@style/edit_title"
                android:text="确认新密码:" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.6"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_password_now_n"
                    style="@style/login_password_edit"
                    android:layout_width="0dp"
                    android:layout_marginLeft="2dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/edit_style"
                    android:hint="请重新输入您的新密码"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/bt_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            style="@style/basebutton"
            android:text="保存"
            />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>