<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <LinearLayout
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_work"
                style="@style/home_tool_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    style="@style/home_tool_im"
                    android:src="@mipmap/main_attence" />

                <TextView
                    style="@style/home_tool_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考勤" />

                <TextView
                    style="@style/home_tool_text_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(80)" />
            </LinearLayout>

            <LinearLayout
                style="@style/home_tool_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    style="@style/home_tool_im"
                    android:src="@mipmap/main_db" />

                <TextView
                    style="@style/home_tool_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代办" />

                <TextView
                    style="@style/home_tool_text_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(80)" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_notice"
                style="@style/home_tool_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    style="@style/home_tool_im"
                    android:src="@mipmap/main_broad" />

                <TextView
                    style="@style/home_tool_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知" />

                <TextView
                    style="@style/home_tool_text_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(80)" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务处理" />
            <View
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                style="@style/main_tab_d_view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/home_rw_fa_layout"
                    android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       style="@style/home_rw_ch_layout"
                       android:orientation="vertical">
                       <TextView
                           android:text="待执行"
                           style="@style/home_rw_tit"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:text="目前有0个待执行"
                           style="@style/home_rw_funt"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/main_rw_dzx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                   style="@style/main_tab_v_view"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/home_rw_fa_layout"
                    android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       style="@style/home_rw_ch_layout"
                       android:orientation="vertical">
                       <TextView
                           android:text="上报案件"
                           style="@style/home_rw_tit"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:text="目前有0个已上报"
                           style="@style/home_rw_funt"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/main_rw_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <View
                style="@style/main_tab_d_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/home_rw_fa_layout"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/home_rw_ch_layout"
                        android:orientation="vertical">
                        <TextView
                            android:text="已办结"
                            style="@style/home_rw_tit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="目前有0个已办结"
                            style="@style/home_rw_funt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/main_rw_bj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    style="@style/main_tab_v_view"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    style="@style/home_rw_fa_layout"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/home_rw_ch_layout"
                        android:orientation="vertical">
                        <TextView
                            android:text="案件完结"
                            style="@style/home_rw_tit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="目前有0个完结"
                            style="@style/home_rw_funt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/main_rw_ybj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <com.esri.android.map.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>